<odoo>
    <data>
        <record id="view_account_group_tree_inherit" model="ir.ui.view">
            <field name="name">account.group.tree.inherit</field>
            <field name="model">account.group</field>
            <field name="inherit_id" ref="account.view_account_group_tree"/>
            <field name="arch" type="xml">
                <xpath expr="field[@name='code_prefix_end']" position="after">
                    <field name="code"></field>
                </xpath>
                <xpath expr="field[@name='name']" position="after">
                    <field name="category"></field>
                </xpath>
            </field>
        </record>

        <record id="view_account_group_form_inherit" model="ir.ui.view">
            <field name="name">account.group.form.inherit</field>
            <field name="model">account.group</field>
            <field name="inherit_id" ref="account.view_account_group_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/field[@name='name']" position="before">
                    <field name="code"></field>
                </xpath>
                <xpath expr="//sheet/group/field[@name='name']" position="after">
                    <field name="category"></field>
                </xpath>
            </field>
        </record>

    </data>
</odoo>