<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="report_paperformat_custom" model="report.paperformat">
            <field name="name">Custom Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">105</field>
            <field name="page_width">80</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_checkincounter_slip" model="ir.actions.report">
            <field name="name">check in counter Slip</field>
            <field name="model">checkin.counter.line</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">check_in_counter.report_checkin_counter_slip</field>
            <field name="report_file">check_in_counter.report_checkin_counter_slip</field>
            <field name="print_report_name">'Check In - ' + object.passenger_name</field>
            <field name="binding_model_id" ref="model_checkin_counter_line"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="report_paperformat_custom"/>
        </record>

    </data>
</odoo>
