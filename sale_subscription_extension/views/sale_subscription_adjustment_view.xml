<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

       <record id="sale_order_extension_form_view" model="ir.ui.view">
            <field name="name">sale.order.extension.form.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_subscription.sale_subscription_primary_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="subscription_type_id"/>
                </xpath>
            </field>
        </record>

        <!--        Subscription Type View-->

        <record id="action_sale_subscription_type_form" model="ir.actions.act_window">
            <field name="name">Subscription Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.subscription.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Subscription Type
                </p>
            </field>
        </record>

        <record id="view_sale_subscription_type_tree" model="ir.ui.view">
            <field name="name">sale.subscription.type.tree</field>
            <field name="model">sale.subscription.type</field>
            <field name="arch" type="xml">
                <tree string="Subscription Types">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="sale_subscription_type_form_view" model="ir.ui.view">
            <field name="name">sale.subscription.type.form.view</field>
            <field name="model">sale.subscription.type</field>
            <field name="arch" type="xml">
                <form string="Subscription Type">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem id="menu_sale_subscription_type"
                  name="Subscription Type"
                  action="action_sale_subscription_type_form"
                  parent="sale_subscription.menu_sale_subscription_root"
                  sequence="10"/>
    </data>
</odoo>