<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="sale_subscription_view_tree_inherit" model="ir.ui.view">
    <field name="name">sale.subscription.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale_subscription.sale_subscription_view_tree"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="after">
            <field name="sale_order_template_id"/>
        </xpath>
    </field>
</record>
    <record id="sale_subscription_template_view_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.template.form.inherit.customer</field>
            <field name="model">sale.order.template</field>
            <field name="inherit_id" ref="sale_subscription.sale_subscription_template_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_create_sale_orders" string="Generate Subscriptions" type="object" class="oe_highlight"/>
                    <button name="action_view_sale_order_lines" string="Update Qty for Next invoice" type="object" class="btn-primary"/>
                </header>
            </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Customers" name="customers">
                        <field name="customer_ids">
                            <tree editable="bottom">
                                <field name="partner_id"/>
                                <field name="name"/>
                                <field name="email"/>
                                <field name="phone"/>
                            </tree>
                        </field>
                        <group>
                            <field name="customer_count"/>
                        </group>
                    </page>
                    <page string="Active Subscriptions" name="active_subscriptions">
                        <field name="sale_order_ids" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="date_order"/>
                                <field name="amount_total"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
     <record id="view_create_subscription_wizard_form" model="ir.ui.view">
        <field name="name">create.subscription.wizard.form</field>
        <field name="model">create.subscription.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Subscription Orders">
                <group>
                    <field name="template_id" readonly="1"/>
                    <field name="validity_date" widget="date" options="{'format': 'dd/MM/yyyy'}"/>
                    <field name="date_order" widget="date" options="{'format': 'dd/MM/yyyy'}"/>
                    <field name="plan_id"/>
                    <field name="payment_term_id"/>
                    <field name="end_date" widget="date" options="{'format': 'dd/MM/yyyy'}"/>
                </group>
                <footer>
                    <button name="action_create_orders" string="Create Orders" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_sale_order_template_wizard_form" model="ir.ui.view">
    <field name="name">sale.order.template.form</field>
    <field name="model">sale.order.template</field>
    <field name="arch" type="xml">
        <form string="Sale Order Template">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="sale_order_template_line_ids" invisible="1"/>
                    <field name="show_as_columns"/>
                </group>

                <notebook>
                    <page string="Sale Order Template Lines">
                        <field name="sale_order_template_html" widget="html"/>
                    </page>
                </notebook>
            </sheet>
            <footer>
                <button name="action_edit_html" string="Edit Units" type="object" class="oe_highlight"/>
                <button string="Create Invoices" name="action_create_invoices" type="object" class="btn-primary"/>
                <button string="Close" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>
    <record id="action_sale_order_template_wizard" model="ir.actions.act_window">
    <field name="name">Sale Order Template</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">sale.order.template</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_sale_order_template_wizard_form"/>
    <field name="target">new</field>
</record>
    <record id="view_edit_html_wizard_form" model="ir.ui.view">
        <field name="name">edit.html.wizard.form</field>
        <field name="model">edit.html.wizard</field>
        <field name="arch" type="xml">
            <form string="Edit Units">
                 <field name="html_content" widget="html" options="{'collaborative': true, 'resizable': true}" style="min-height: 400px;"/>
                <footer>
                    <button string="Confirm and Create Invoices" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>