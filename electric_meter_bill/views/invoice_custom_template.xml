<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-name='account.report_invoice_document']" position="inside">
            <div class="page">
                <div style="page-break-before: always;">
                    <t t-call="electric_meter_bill.report_additional_content"/>
                </div>
            </div>
        </xpath>
    </template>

    <template id="report_additional_content">
        <t t-foreach="docs" t-as="doc">
            <div>
                <div style="text-align: center; margin-bottom: 20px;">
                    <strong>Rate Break Down</strong>
                </div>

                <table class="table table-sm" style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr style="background-color: #b1c694; color: black; text-align: center;">
                            <th style="border: 1px solid black;">No</th>
                            <th style="border: 1px solid black;">Service Area</th>
                            <th style="border: 1px solid black;">Meter No.</th>
                            <th style="border: 1px solid black;">Units</th>
                            <th style="border: 1px solid black;">Rate</th>
                            <th style="border: 1px solid black;">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Initialize the totals -->
                        <t t-set="total_units" t-value="0.0"/>
                        <t t-set="total_amount" t-value="0.0"/>

                        <t t-set="index" t-value="0"/>
                        <t t-foreach="doc.invoice_line_ids" t-as="line">
                            <tr>
                                <td style="border: 1px solid black;">
                                    <t t-esc="index + 1"/>
                                </td>

                                <td style="border: 1px solid black;">
                                    <div t-if="doc.partner_id">
                                        <span t-esc="doc.partner_id.name"/>
                                    </div>
                                </td>

                                <td style="border: 1px solid black;">
                                    <t t-foreach="doc.partner_id.electric_meter_ids" t-as="meter">
                                        <span t-esc="meter.meter_number"/>
                                        <br/>
                                    </t>
                                </td>

                                <td style="border: 1px solid black;">
                                    <span t-esc="doc.reading_line_id.total_unit"/>
                                </td>

                                 <td style="border: 1px solid black;">
                                    <t t-foreach="doc.partner_id.business_source_id.rate_id.rate_line_ids"
                                       t-as="rate_line">
                                        <span t-esc="rate_line.from_unit"/>
                                        <br/>
                                    </t>
                                </td>
                            </tr>

                            <t t-set="total_units" t-value="total_units + doc.reading_line_id.total_unit"/>
                            <t t-set="total_amount" t-value="total_amount + line.price_subtotal"/>

                            <t t-set="index" t-value="index + 1"/>
                        </t>
                        <span t-field="doc.reading_line_id.total_unit"/>
                    </tbody>
                    <tfoot>
                        <tr style="background-color: #a8c9e2; color: black; text-align: center;">
                            <td colspan="3" style="text-align: right; border: 1px solid black;">
                                <strong>Total (Kyats)</strong>
                            </td>

                            <td style="border: 1px solid black;">
                                <t t-esc="total_units"/>
                            </td>

                            <td colspan="1" style="text-align: right; border: 1px solid black;">
                            </td>

                            <td style="border: 1px solid black;">
                                <t t-esc="total_amount"/>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </t>
    </template>
</odoo>