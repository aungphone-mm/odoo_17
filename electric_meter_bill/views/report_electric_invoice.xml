<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Report action definition -->
    <record id="action_report_electric_meter_invoice" model="ir.actions.report">
        <field name="name">Electric Meter Invoice With Breakdown</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">electric_meter_bill.report_electric_meter_invoice</field>
        <field name="report_file">electric_meter_bill.report_electric_meter_invoice</field>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Main template -->
    <template id="report_electric_meter_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <!-- First Page -->
                <t t-call="web.external_layout">
                    <div class="page" style="font-family: Arial, sans-serif;">
                        <div style="text-align: center; margin-bottom: 20px;">
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-width: 300px;"/>
                            <div style="font-size: 20px; color: #a94442; font-weight: bold;" t-field="o.company_id.name"/>
                            <div style="font-size: 12px;" t-field="o.company_id.street"/>
                            <div style="font-size: 12px;">
                                Tel: <span t-field="o.company_id.phone"/> Email: <span t-field="o.company_id.email"/>
                            </div>
                        </div>

                        <div style="text-align: center; font-size: 18px; font-weight: bold; margin: 20px 0;">
                            INVOICE
                        </div>

                        <!-- Customer and Invoice Info -->
                        <div style="display: flex; justify-content: space-between; margin-bottom: 20px;">
                            <div style="width: 50%;">
                                <div t-field="o.partner_id.name" style="font-weight: bold;"/>
                                <div t-field="o.partner_id.street"/>
                                <div t-field="o.partner_id.street2"/>
                                <div t-field="o.partner_id.city"/>
                                <div t-field="o.partner_id.country_id"/>
                            </div>
                            <div style="width: 40%;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="padding: 3px;">Inv No.</td>
                                        <td style="padding: 3px;">:</td>
                                        <td style="padding: 3px;"><span t-field="o.name"/></td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 3px;">Date</td>
                                        <td style="padding: 3px;">:</td>
                                        <td style="padding: 3px;"><span t-field="o.invoice_date"/></td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 3px;">Payment Due</td>
                                        <td style="padding: 3px;">:</td>
                                        <td style="padding: 3px;"><span t-field="o.invoice_date_due"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Invoice Lines Table -->
                        <table class="table table-bordered" style="margin-top: 20px;">
                            <thead>
                                <tr>
                                    <th style="width: 5%;">Sr.</th>
                                    <th style="width: 55%;">Description</th>
                                    <th style="width: 20%;">Units</th>
                                    <th style="width: 20%;">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>
                                        Electrical Charges For:<br/>
                                        Meter No :As per attached<br/>
                                        <span t-field="o.for_date" t-options='{"format": "MMM"}'/>' <span t-field="o.for_date" t-options='{"format": "yy"}'/>
                                    </td>
                                    <td style="text-align: right;">
                                        <span t-esc="sum(o.invoice_line_ids.mapped('quantity'))"/>
                                    </td>
                                    <td style="text-align: right;">
                                        <span t-field="o.amount_total"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Amount in Words -->
                        <div style="margin-top: 10px; border-top: 1px solid black; border-bottom: 1px solid black; padding: 5px;">
                            <span t-esc="o.currency_id.amount_to_text(o.amount_total)"/> Only
                        </div>

                        <!-- Payment Notes -->
                        <div style="margin-top: 20px; font-size: 12px;">
                            <strong>NOTE:</strong>
                            <ul style="list-style-type: none; padding-left: 20px;">
                                <li>- Payment has to be made in the currency stated above.</li>
                                <li>- Should the payment be made in other currencies stated as above, the exchange rate shall be based on the prevailing rate. Please check before payment is made.</li>
                                <li>- For CASH payment, please pay at:</li>
                                <li style="padding-left: 20px;">Yangon Aerodrome Company Limited Building, Finance Department, Infront of (T-2) Yangon International Airport</li>
                                <li>- For payment via ACCOUNT TRANSFER (bank charges to be borne by the payee), account no.:</li>
                                <t t-foreach="o.company_id.bank_ids" t-as="bank">
                                    <li style="padding-left: 20px;">
                                        Myanmar Currency: <span t-field="bank.bank_id.name"/>, MMK Account No. <span t-field="bank.acc_number"/>
                                    </li>
                                </t>
                            </ul>
                        </div>

                        <!-- Signature -->
                        <div style="margin-top: 50px;">
                            <div>Issued by:</div>
                            <div style="margin-top: 30px;">
                                ____________________<br/>
                                General Manager
                            </div>
                        </div>
                    </div>
                </t>

                <!-- Second Page -->
                <t t-if="o.invoice_line_ids.filtered(lambda l: l.reading_line_id)">
                    <t t-call="web.external_layout">
                        <div class="page" style="font-family: Arial, sans-serif;">
                            <div style="text-align: center; margin-bottom: 20px;">
                                <h3>Electric Meter Rate Breakdown</h3>
                            </div>

                            <!-- Rate breakdown table -->
                            <table class="table table-sm" style="width: 100%; border-collapse: collapse;">
                                <thead>
                                    <tr style="background-color: #b1c694; color: black; text-align: center;">
                                        <th style="border: 1px solid black;">No</th>
                                        <th style="border: 1px solid black;">Service Area</th>
                                        <th style="border: 1px solid black;">Meter No.</th>
                                        <th style="border: 1px solid black;">Units</th>
                                        <th style="border: 1px solid black;">Rate</th>
                                        <th style="border: 1px solid black;">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Initialize the totals -->
                                    <t t-set="total_units" t-value="0.0"/>
                                    <t t-set="total_amount" t-value="0.0"/>
                                    <t t-set="total_mgm_charge" t-value="0.0"/>

                                    <t t-set="index" t-value="0"/>
                                    <t t-foreach="o.invoice_line_ids.filtered(lambda l: l.reading_line_id)" t-as="line">
                                        <tr>
                                            <td style="border: 1px solid black; text-align: center;">
                                                <t t-esc="index + 1"/>
                                            </td>

                                            <td style="border: 1px solid black;">
                                                <span t-field="line.reading_line_id.meter_id.partner_id.name"/>
                                            </td>

                                            <td style="border: 1px solid black;">
                                                <span t-field="line.reading_line_id.meter_id.name"/>
                                            </td>

                                            <td style="border: 1px solid black;">
                                                <t t-set="total_unit" t-value="line.reading_line_id.total_unit"/>
                                                <t t-set="remain_unit" t-value="total_unit"/>
                                                <t t-foreach="o.partner_id.business_source_id.rate_id.rate_line_ids" t-as="rate_line">
                                                    <t t-if="remain_unit > 0">
                                                        <t t-set="units_in_bracket" t-value="min(remain_unit, rate_line.to_unit - rate_line.from_unit + 1)"/>
                                                        <span t-esc="'{:,.0f}'.format(units_in_bracket)"/>
                                                        <br/>
                                                        <t t-set="remain_unit" t-value="remain_unit - units_in_bracket"/>
                                                    </t>
                                                </t>
                                            </td>

                                            <td style="border: 1px solid black;">
                                                <t t-foreach="o.partner_id.business_source_id.rate_id.rate_line_ids" t-as="rate_line">
                                                    <span t-esc="'{:,.0f}'.format(rate_line.unit_price)"/>
                                                    ( <span t-esc="'{:,.0f}'.format(rate_line.from_unit)"/> - <span t-esc="'{:,.0f}'.format(rate_line.to_unit)"/> )
                                                    <br/>
                                                </t>
                                            </td>

                                            <td style="border: 1px solid black; text-align: right">
                                                <t t-set="total_unit" t-value="line.reading_line_id.total_unit"/>
                                                <t t-set="remain_unit" t-value="total_unit"/>
                                                <t t-set="subtotal_amount" t-value="0"/>
                                                <t t-foreach="o.partner_id.business_source_id.rate_id.rate_line_ids" t-as="rate_line">
                                                    <t t-if="remain_unit > 0">
                                                        <t t-set="units_in_bracket" t-value="min(remain_unit, rate_line.to_unit - rate_line.from_unit + 1)"/>
                                                        <t t-set="bracket_amount" t-value="units_in_bracket * rate_line.unit_price"/>
                                                        <span t-esc="'{:,.0f}'.format(bracket_amount)"/>
                                                        <br/>
                                                        <t t-set="remain_unit" t-value="remain_unit - units_in_bracket"/>
                                                        <t t-set="subtotal_amount" t-value="subtotal_amount + bracket_amount"/>
                                                    </t>
                                                </t>
                                                <t t-if="line.reading_line_id.meter_id.mgm_percentage">
                                                    <t t-set="mgm_charge" t-value="(subtotal_amount / 100) * line.reading_line_id.meter_id.mgm_percentage"/>
                                                    <strong>MGM (<t t-esc="line.reading_line_id.meter_id.mgm_percentage"/>%): <t t-esc="'{:,.0f}'.format(mgm_charge)"/></strong>
                                                    <br/>
                                                    <t t-set="total_mgm_charge" t-value="total_mgm_charge + mgm_charge"/>
                                                </t>
                                                <t t-else="">
                                                    <t t-set="mgm_charge" t-value="0"/>
                                                </t>
                                                <strong>Total: <t t-esc="'{:,.0f}'.format(subtotal_amount + mgm_charge)"/></strong>
                                            </td>
                                        </tr>

                                        <!-- Accumulate the totals -->
                                        <t t-set="total_units" t-value="total_units + line.reading_line_id.total_unit"/>
                                        <t t-set="total_amount" t-value="total_amount + line.price_subtotal"/>
                                        <t t-set="index" t-value="index + 1"/>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr style="background-color: #a8c9e2; color: black; text-align: center;">
                                        <td colspan="3" style="text-align: right; border: 1px solid black;">
                                            <strong>Total (Units)</strong>
                                        </td>

                                        <td style="text-align: right; border: 1px solid black;">
                                            <strong><t t-esc="'{:,.0f}'.format(total_units)"/></strong>
                                        </td>

                                        <td style="text-align: right; border: 1px solid black;">
                                        </td>

                                        <td style="text-align: right; border: 1px solid black;">
                                            <strong>
                                                <t t-esc="'{:,.0f}'.format(total_amount)"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>