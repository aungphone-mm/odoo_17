<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_report_electric_meter_invoice" model="ir.actions.report">
        <field name="name">Electric Meter Invoice With Breakdown</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">electric_meter_bill.report_electric_meter_invoice</field>
        <field name="report_file">electric_meter_bill.report_electric_meter_invoice</field>
        <field name="print_report_name">(object.name) and ('Electric-' + object.name) or 'Electric-Invoice'</field>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_electric_meter_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <!-- Add styles here -->
                        <style>
                            .meter-reading-table th {
                                background-color: #e9ecef;
                            }
                        </style>
                        <div class="row mb-4">
                            <div class="col-12 text-center">
                                <h2 style="font-weight: bold; font-size: 24px;">INVOICE</h2>
                            </div>
                        </div>
                        <div class="page">
                            <!-- Invoice Info Section -->
                            <div class="row mb-4">
                                <div class="col-6">
                                <div t-field="o.partner_id.name"/>
                                <div t-field="o.partner_id.street"/>
                                <div t-field="o.partner_id.street2"/>
                                <div t-field="o.partner_id.city"/>
                                <t t-if="o.partner_id.state_id">
                                    <div>
                                        <t t-esc="o.partner_id.state_id.name"/>
                                        <t t-if="o.partner_id.zip">, <t t-esc="o.partner_id.zip"/></t>
                                        <t t-if="o.partner_id.country_id">, <t t-esc="o.partner_id.country_id.name"/></t>
<!--                                        <div t-if="o.partner_id.country_id" t-field="o.partner_id.country_id.name"/>-->
                                    </div>
                                </t>
                                    <div t-if="o.reading_line_id.partner_id.contact_name">
                                    Attention: <t t-esc="o.partner_id.contact_name"/><br/>
                                        Position: <t t-esc="o.partner_id.contact_job_position"/>
                                </div>
                            </div>
                                <div class="col-6 d-flex justify-content-end">
                                    <div>
                                        <strong>Invoice No:</strong>
                                        <span t-field="o.name"/><br/>
                                        <strong>Date:</strong>
                                        <span t-field="o.invoice_date"/><br/>
                                        <strong>Due Date:</strong>
                                        <span t-field="o.invoice_date_due"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Invoice Lines -->
                            <table class="table table-bordered meter-reading-table" style="margin-top: 20px;">
                                <thead>
                                    <tr>
                                        <th style="width: 5%;">Sr.</th>
                                        <th style="width: 55%;">Description</th>
                                        <th style="width: 20%;">Units</th>
                                        <th style="width: 20%;">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><br/><br/><br/>1</td>
                                        <td>
                                            <br/><br/><br/>
                                            <span t-field="o.reading_line_id.reading_id.inv_desc"/>
<!--                                            <span t-field="o.for_date" t-options='{"format": "MMM"}'/>' <span t-field="o.for_date" t-options='{"format": "yy"}'/>-->
                                            <br/><br/><br/>
                                        </td>
                                        <t t-set="total_units" t-value="sum(o.invoice_line_ids.filtered(lambda l: l.reading_line_id).mapped('reading_line_id.total_unit'))"/>
                                        <td style="text-align: center;">
                                            <br/><br/><br/>
                                            <t t-if="total_units > 0">
                                                <span t-esc="'{:,.0f}'.format(total_units)"/>
                                            </t>
                                        </td>
<!--                                        <td style="text-align: right;">-->
<!--                                            <br/><br/><br/><br/>-->
<!--                                            <span t-field="o.amount_total"/>-->
<!--                                        </td>-->
                                        <td style="text-align: right;">
                                            <br/><br/><br/>
                                            <t t-if="o.currency_id.name == 'MMK'">
                                                <span t-esc="'MMK ' + '{:,.2f}'.format(o.amount_total)"/>
                                            </t>
                                            <t t-elif="o.currency_id.name == 'USD'">
                                                <span t-esc="'$ ' + '{:,.2f}'.format(o.amount_total)"/>
                                            </t>
<!--                                            <t t-elif="o.currency_id.name == 'USD'">-->
<!--                                                $ <span t-esc="'{:,.2f}'.format(o.amount_total)"/>-->
<!--                                            </t>-->
                                            <t t-else="">
                                                <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" style="text-align: left; border-top: 1px solid black;">
                                            <span t-esc="o.currency_id.amount_to_text(o.amount_total)+' Only'"/>
<!--                                            <span t-esc="'$ ' + '{:,.2f}'.format(o.amount_total)+' Only'"/>-->
                                        </td>

                                        <td colspan="3" style="text-align: right; border-top: 1px solid black;">
                                        <t t-if="o.currency_id.name == 'MMK'">
                                            <span t-esc="'MMK ' + '{:,.2f}'.format(o.amount_total)"/>
                                        </t>
                                        <t t-elif="o.currency_id.name == 'USD'">
                                            <span t-esc="'$ ' + '{:,.2f}'.format(o.amount_total)"/>
                                        </t>
                                        <t t-else="">
                                            <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </t>
                                    </td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- Total Section -->
                            <div class="row">
                                <div class="col-6">
                                    <div t-if="o.narration" class="mt-4">
                                        <strong>Notes:</strong>
                                        <p t-field="o.narration"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Payment Information -->
                            <div class="row mt-4">
                                <div class="col-12">

                                    <span t-field="o.reading_line_id.reading_id.note_desc"/>
<!--                                    <p>Issued by:</p>-->
                                </div>
                            </div>

                            <!-- Signature -->
<!--                            <div class="row mt-5">-->
<!--                                <div class="col-6">-->
<!--                                    <p>____________________</p>-->
<!--                                    <p>Aye Thida</p>-->
<!--                                     <p>General Manager</p>-->
<!--                                </div>-->
<!--                            </div>-->
                        </div>
                    </t>
                    <!-- Second Page -->
                <t t-if="o.invoice_line_ids.filtered(lambda l: l.reading_line_id)">
                    <t t-call="web.basic_layout">
                        <div class="page" style="font-family: Arial, sans-serif;">
                            <div style="text-align: center; margin-bottom: 20px;">
                                <h3>Electric Meter Rate Breakdown</h3>
                            </div>

                            <!-- Rate breakdown table -->
                            <table class="table table-sm" style="width: 100%; border-collapse: collapse;">
                                <thead>
                                    <tr style="background-color: #b1c694; color: black; text-align: center;">
                                        <th style="border: 1px solid black;">No</th>
                                        <th style="border: 1px solid black;">Service Area</th>
                                        <th style="border: 1px solid black;">Meter No.</th>
                                        <th style="border: 1px solid black;">Location</th>
                                        <th style="border: 1px solid black;">Latest Reading</th>
                                        <th style="border: 1px solid black;">Current Reading</th>
                                        <th style="border: 1px solid black;">Units</th>
                                        <th style="border: 1px solid black;">Rate</th>
                                        <th style="border: 1px solid black;">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Initialize the totals -->
                                    <t t-set="total_units" t-value="0.0"/>
                                    <t t-set="total_amount" t-value="0.0"/>
                                    <t t-set="total_mgm_charge" t-value="0.0"/>

                                    <t t-set="index" t-value="0"/>
                                    <t t-foreach="o.invoice_line_ids.filtered(lambda l: l.reading_line_id)" t-as="line">
                                        <tr>
                                            <td style="border: 1px solid black; text-align: center;">
                                                <t t-esc="index + 1"/>
                                            </td>

                                            <td style="border: 1px solid black;">
                                                <span t-field="line.reading_line_id.meter_id.partner_id.name"/>
                                            </td>

                                            <td style="border: 1px solid black;">
                                                <span t-field="line.reading_line_id.meter_id.name"/>
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <span t-field="line.reading_line_id.meter_id.location_id"/>
                                            </td>
                                            <td style="border: 1px solid black; text-align: right;">
                                                <span t-field="line.reading_line_id.latest_reading_unit"/>
                                            </td>
                                            <td style="border: 1px solid black; text-align: right;">
                                                <span t-field="line.reading_line_id.current_reading_unit"/>
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <t t-set="total_unit" t-value="line.reading_line_id.total_unit"/>
                                                <t t-set="remain_unit" t-value="total_unit"/>
                                                <t t-foreach="o.partner_id.business_source_id.rate_id.rate_line_ids" t-as="rate_line">
                                                    <t t-if="remain_unit > 0">
                                                        <t t-set="units_in_bracket" t-value="min(remain_unit, rate_line.to_unit - rate_line.from_unit)"/>
                                                        <span t-esc="'{:,.0f}'.format(units_in_bracket)"/>
                                                        <br t-if="not rate_line_last"/>
                                                        <t t-set="remain_unit" t-value="remain_unit - units_in_bracket"/>
                                                    </t>
                                                </t>
                                            </td>
<!--                                            <td style="border: 1px solid black;">-->
<!--                                                <t t-foreach="o.partner_id.business_source_id.rate_id.rate_line_ids" t-as="rate_line">-->
<!--                                                    <span t-esc="'{:,.0f}'.format(rate_line.unit_price)"/>-->
<!--                                                    (<span t-esc="'{:,.0f}'.format(rate_line.from_unit)"/>-<span t-esc="'{:,.0f}'.format(rate_line.to_unit)"/>)-->
<!--                                                    <br t-if="not rate_line_last"/>-->
<!--                                                </t>-->
<!--                                            </td>-->
                                            <td style="border: 1px solid black;">
                                                <t t-foreach="o.partner_id.business_source_id.rate_id.rate_line_ids" t-as="rate_line">
                                                    <span t-esc="rate_line.unit_price"/>
                                                    <br t-if="not rate_line_last"/>
                                                </t>
                                            </td>

                                            <td style="border: 1px solid black; text-align: right">
                                                <t t-set="total_unit" t-value="line.reading_line_id.total_unit"/>
                                                <t t-set="remain_unit" t-value="total_unit"/>
                                                <t t-set="subtotal_amount" t-value="0"/>
                                                <t t-foreach="o.partner_id.business_source_id.rate_id.rate_line_ids" t-as="rate_line">
                                                    <t t-if="remain_unit > 0">
                                                        <t t-set="units_in_bracket" t-value="min(remain_unit, rate_line.to_unit - rate_line.from_unit)"/>
                                                        <t t-set="bracket_amount" t-value="units_in_bracket * rate_line.unit_price"/>
                                                        <span t-esc="'{:,.0f}'.format(bracket_amount)"/>
                                                        <br/>
                                                        <t t-set="remain_unit" t-value="remain_unit - units_in_bracket"/>
                                                        <t t-set="subtotal_amount" t-value="subtotal_amount + bracket_amount"/>
                                                    </t>
                                                </t>
                                                <t t-if="line.reading_line_id.meter_id.mgm_percentage">
                                                    <t t-set="mgm_charge" t-value="(subtotal_amount / 100) * line.reading_line_id.meter_id.mgm_percentage"/>
                                                    <strong>MGM (<t t-esc="line.reading_line_id.meter_id.mgm_percentage"/>%): <t t-esc="'{:,.0f}'.format(mgm_charge)"/></strong>
                                                    <br/>
                                                    <t t-set="total_mgm_charge" t-value="total_mgm_charge + mgm_charge"/>
                                                </t>
                                                <t t-else="">
                                                    <t t-set="mgm_charge" t-value="0"/>
                                                </t>
                                                <strong>Total: <t t-esc="'{:,.0f}'.format(subtotal_amount + mgm_charge)"/></strong>
                                            </td>
                                        </tr>

                                        <!-- Accumulate the totals -->
                                        <t t-set="total_units" t-value="total_units + line.reading_line_id.total_unit"/>
                                        <t t-set="total_amount" t-value="total_amount + line.price_subtotal"/>
                                        <t t-set="index" t-value="index + 1"/>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr style="background-color: #a8c9e2; color: black; text-align: center;">
                                        <td colspan="6" style="text-align: right; border: 1px solid black;">
                                            <strong>Total (Units)</strong>
                                        </td>

                                        <td style="text-align: right; border: 1px solid black;">
                                            <strong><t t-esc="'{:,.0f}'.format(total_units)"/></strong>
                                        </td>

                                        <td style="text-align: right; border: 1px solid black;">
                                        </td>

                                        <td style="text-align: right; border: 1px solid black;">
                                            <strong>
                                                <t t-esc="'{:,.0f}'.format(total_amount)"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                            <!-- Add this after the main table -->
                        <div class="mt-4">
                            <h5>Rate Details:</h5>
                            <div class="ml-4">
                                <t t-foreach="o.partner_id.business_source_id.rate_id.rate_line_ids" t-as="rate_line">
                                    <div>
                                        <span t-esc="rate_line.unit_price"/>
                                        (<span t-esc="'{:,.0f}'.format(rate_line.from_unit)"/>-<span t-esc="'{:,.0f}'.format(rate_line.to_unit)"/>)
                                    </div>
                                </t>
                            </div>
                        </div>
                        </div>
                    </t>
                </t>
                </t>
            </t>
        </template>
</odoo>