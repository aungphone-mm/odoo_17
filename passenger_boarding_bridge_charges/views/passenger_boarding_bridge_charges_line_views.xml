<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <record id="view_passenger_boarding_bridge_charges_line_tree" model="ir.ui.view">
            <field name="name">passenger.boarding.bridge.charges.line.tree</field>
            <field name="model">passenger.boarding.bridge.charges.line</field>
            <field name="arch" type="xml">
                <tree string="Passenger Boarding Bridge Charges Line">
                    <header>
<!--                        <button name="action_register_payment" string="Pay" type="object" class="oe_highlight"/>-->
                    </header>
                    <field name="flightno_id"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="total_minutes" />
                    <field name="amount"/>

                </tree>
            </field>
        </record>
        <record id="view_move_form_inherit_passenger_boarding_bridge_charges" model="ir.ui.view">
        <field name="name">account.move.form.inherit.passenger.boarding.bridge.charges</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_bridge_service" type="object"
                        class="oe_stat_button" icon="fa-plane"
                         invisible="not passenger_boarding_bridge_charges_id">
                    <span class="o_stat_text">Bridge Service</span>
                </button>
            </div>
            <field name="partner_id" position="after">
                <field name="passenger_boarding_bridge_charges_id" invisible="1"/>
            </field>
        </field>
    </record>
     <record id="view_bridge_rate_tree" model="ir.ui.view">
        <field name="name">passenger.boarding.bridge.charges.rate.tree</field>
        <field name="model">passenger.boarding.bridge.charges.rate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
                <field name="currency_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- bridge Rate Form View -->
    <record id="view_bridge_rate_form" model="ir.ui.view">
        <field name="name">passenger.boarding.bridge.charges.rate.form</field>
        <field name="model">passenger.boarding.bridge.charges.rate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="journal_id"/>
                            <field name="currency_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Rate Lines">
                            <field name="bridge_rate_line_ids">
                                <tree editable="bottom">
                                    <field name="rate_id" readonly="True"/>
                                    <field name="from_unit"/>
                                    <field name="to_unit"/>
                                    <field name="currency_id"/>
                                    <field name="unit_price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
</odoo>